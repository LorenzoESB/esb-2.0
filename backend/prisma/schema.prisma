generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SimulatorType {
  AMORTIZACAO
  JUROS_COMPOSTOS
  EMPRESTIMO
  INVESTIMENTOS
  COMBUSTIVEL
}

model Simulation {
  id            Int           @id @default(autoincrement())
  createdAt     DateTime      @default(now())
  simulatorType SimulatorType
  email         String?
  inputData     Json
  outputData    Json

  @@map("simulations")
}
